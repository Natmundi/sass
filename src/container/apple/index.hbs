<div class='page'>
  <div class='header'>

    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Search'
            class='header__icon'
          />
        </div>
        </div>
      </header>


      <div class="ad__block">
        <h3 class="ad__title">{{ad.title}}</h3>
          <div class='ad__link'>
              <a
                href='{{ad.link.url}}'
                class='ad__link'
              >{{ad.link.text}}</a>

              <img src="/svg/arrow.svg" alt="Arrow" class="header__icon">
          </div>
      </div>


    {{/with}}
  </div>

    {{#with iphone_pro}}
      <section class="product product--big product--iphone-pro product--dark product--top">
        <div class="product__content">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>

          <div class="product__action">
            {{#with link}}

              {{#each text}}
                <a href="{{../link}}" class="product__link">
                  {{this}} 
                  <img src="/svg/arrow.svg" alt="Arrow" class="header__icon">
                </a>
                 
              {{/each}}
            
            {{/with}}
          </div>
        </div>
      </section>
    {{/with}}

